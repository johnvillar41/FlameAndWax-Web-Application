@model IList<OrderViewModel>
<div class="card">
    <div class="table-responsive">
        <table class="table table-borderless">
            <thead>
                <tr>
                    <th scope="col">OrderId</th>
                    <th scope="col">Customer Details</th>
                    <th scope="col">Handled By</th>
                    <th scope="col">TotalCost</th>
                    <th scope="col">ModeOfPayment</th>
                    <th scope="col">Courier</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <tr>
                        <td>
                            @Model[i].OrderId
                        </td>
                        <td>
                            @Model[i].Customer.CustomerName
                        </td>
                        <td>
                            @if (Model[i].Employee.FirstName == null)
                            {
                                <p>None</p>
                            }
                            else
                            {
                                <p>@Model[i].Employee.FirstName</p>
                            }
                        </td>
                        <td>
                            @Model[i].TotalCost
                        </td>
                        <td>
                            @Model[i].ModeOfPayment
                        </td>
                        <td>
                            @Model[i].Courier
                        </td>
                        <td>
                            @Model[i].Status
                        </td>
                        <td><button type="button" class="btn btn-gold" data-toggle="modal"
                            data-target="#exampleModalScrollable_@i">
                                View Order Details
                            </button></td>
                    </tr>
                    <!-- Modal -->
                    <div class="modal fade" id="exampleModalScrollable_@i" tabindex="-1" role="dialog"
                    aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-scrollable" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalScrollableTitle">Modal title</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    @foreach (var orderDetail in Model[i].OrderDetails)
                                    {
                                        <p>@orderDetail.OrderId</p>
                                        <p>@orderDetail.Product.ProductName</p>
                                        <p>@orderDetail.Product.ProductPrice</p>
                                        <p>@orderDetail.TotalPrice</p>
                                        <p>@orderDetail.Quantity</p>
                                        <p>@orderDetail.Status</p>
                                    }
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-primary">Save changes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>

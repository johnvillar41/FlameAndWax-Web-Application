@model IEnumerable<ProductViewModel>
<div class="container">
    @foreach (var item in Model)
    {
        <div class="card mb-2 mt-1">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="@Url.Content(item.PictureLink)" class="card-img" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@item.ProductName</h5>
                        <p class="card-text">@item.ProductDescription</p>
                        <hr />
                        @if (item.CustomerReviews.Count() != 0)
                        {
                            foreach (var comment in item.CustomerReviews)
                            {
                                <p class="card-text"><small class="text-muted">@comment.ProductReview</small></p>
                            }
                        }
                        else
                        {
                            <p class="card-text"><small class="text-muted">No Comments</small></p>
                        }

                    </div>
                </div>
            </div>
        </div>
    }
</div>
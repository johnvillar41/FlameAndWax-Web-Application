@using FlameAndWax.Data.Constants;
<style>
    .carousel-fade .carousel-item,
    .carousel-item img {
        max-height: 100vh;
    }
</style>
<div class="bd-example">
    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/carouselpics/candle.jpeg" class="d-block w-100 rounded" alt="Candles">
                <div class="carousel-caption">
                    <h5><span class="rounded" style="background-color: rgba(56, 56, 56, 0.8)">Candles</span></h5>
                    <p><span class="rounded" style="background-color: rgba(56, 56, 56, 0.8)">Nulla vitae elit
                            libero, a
                            pharetra augue mollis interdum.</span></p>
                    <a asp-controller="Home" asp-action="ViewCategorizedProducts"
                        asp-route-category="@nameof(Constants.Category.Candle)" class="btn btn-gold"><i
                            class="fas fa-eye"></i> View Category</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/carouselpics/soap.jpeg" class="d-block w-100 rounded" alt="Soaps">
                <div class="carousel-caption">
                    <h5><span class="rounded" style="background-color: rgba(56, 56, 56, 0.8)">Soaps</span></h5>
                    <p><span class="rounded" style="background-color: rgba(56, 56, 56, 0.8)">Lorem ipsum dolor sit
                            amet,
                            consectetur adipiscing elit.</span></p>
                    <a asp-controller="Home" asp-action="ViewCategorizedProducts"
                        asp-route-category="@nameof(Constants.Category.Soap)" class="btn btn-gold"><i
                            class="fas fa-eye"></i> View Category</a>

                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/carouselpics/diffuser.jpg" class="d-block w-100 rounded" alt="Diffusers">
                <div class="carousel-caption">
                    <h5><span class="rounded" style="background-color: rgba(56, 56, 56, 0.8)">Diffusers</span></h5>
                    <p><span class="rounded" style="background-color: rgba(56, 56, 56, 0.8)">Praesent commodo cursus
                            magna, vel scelerisque nisl consectetur.</span></p>
                    <a asp-controller="Home" asp-action="ViewCategorizedProducts"
                        asp-route-category="@nameof(Constants.Category.Diffuser)" class="btn btn-gold"><i
                            class="fas fa-eye"></i> View Category</a>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
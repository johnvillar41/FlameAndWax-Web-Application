<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Flame and Wax</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom navbar-light box-shadow mb-3" style="background-color: #e4e2da" ;>
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FlameAndWax</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color:#e4e2da">
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <div class="row">
                    <div class="col-md-9 ">
                        <img src="~/images/icons/CandlePhotoFooter.png" class="img-fluid rounded shadow-lg" alt="Responsive image">
                    </div>
                    <div class="col-md-3">
                        <h5>Lets Get in touch</h5>
                        <ul>
                            <li>
                                <img src="~/images/icons/Facebook-removebg-preview.png" class="imageFooter" /><strong>Facebook</strong>: <a href="https://www.facebook.com/FlameandWaxPH13/">FlameandWaxPH13</a>
                            </li>
                            <li>
                                <img src="~/images/icons/Instagram-removebg-preview.png" class="imageFooter" /><strong>Instagram</strong>: <a href="https://www.instagram.com/flameandwax13/">flameandwax13</a>
                            </li>
                            <li>
                                <img src="~/images/icons/Message-removebg-preview.png" class="imageFooter" /><strong>Phone Number</strong>: 0919-310-2347
                            </li>
                            <li>
                                <img src="~/images/icons/Gmail-removebg-preview.png" class="imageFooter" /><strong>Gmail</strong>: lianne.dalde.9@gmail.com
                            </li>
                            <li>
                                <img src="~/images/icons/Messenger-removebg-preview.png" class="imageFooter" /><strong>Messenger</strong>: flameandwax
                            </li>
                        </ul>
                    </div>                    
                </div>
                <hr />
                <p class="text-muted text-center">2021 | All Rights Reserved</p>

            </div>


        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

@model FlameAndWax.Data.Models.MessageModel;
@{
    ViewData["Title"] = "Contact Us";
}
<div class="container text-center">
    <div class="row">

        <div class="col-12">
            <div class="alert alert-success" role="alert" id="completed" style="display:none;">
                <h4 class="alert-heading">Well done!</h4>
                <p>Aww yeah, you successfully sent a message!</p>
                <hr>
                <p class="mb-0">We typically reply within a day or two.</p>
            </div>
        </div>

        <div class="col-md-6">
            <p>
                We'd love to hear from you!<br /><br />

                Don't forget that you can talk to us directly by clicking the message icon on the lower right corner of this page.<br /><br />

                Our office hours are Monday to Saturday, 9am to 4pm.<br /><br />

                In case we don't respond immediately (or you are reaching out to use during non-working hours), please be sure to check our FAQ page or send us an email.<br /><br />

                We'll respond as soon as we can! xoxo<br /><br />
            </p>
            <div class="row ">
                <div class="col-md-3 mx-auto">
                    <img src="~/images/icons/outline_home_black_36dp.png" />
                    <p>Address here plus icon</p>
                </div>
                <div class="col-md-3 mx-auto">
                    <img src="~/images/icons/outline_phone_black_36dp.png" />
                    <p>Phone number here plus icon</p>
                </div>
                <div class="col-md-3 mx-auto">
                    <img src="~/images/icons/outline_email_black_36dp.png" />
                    <p>Email here plus icon</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <form method="post" asp-action="Index" asp-controller="ContactUs" id="myform"               
                  data-ajax="true" data-ajax-loading="#loader" data-ajax-complete="completed"
                  data-ajax-method="post">
                <div class="card p-3 box-shadow" style="background-color: #e4e2da">
                    <h4 class="text-left">Send us a message!</h4><br />
                    <input class="form-control" placeholder="Enter Name" asp-for="@Model.Name" id="name" required/><br />
                    <input class="form-control" placeholder="Enter Email" asp-for="@Model.Email" id="email" required/><br />
                    <input class="form-control" placeholder="Enter PhoneNumber" asp-for="@Model.PhoneNumber" id="phone" required/><br />
                    <textarea class="form-control" placeholder="Message" rows="4" asp-for="@Model.Message" id="message" required></textarea><br />

                    <input type="submit" id="#sendMessage" class="btn btn-gold btn-block" value="Send"/>
                </div>
                <div class="spinner-border" role="status" id="loader" style="display:none;">
                    <span class="sr-only">Loading...</span>
                </div>
            </form>

        </div>
    </div>

</div>

@section scripts{
    <script>       
        completed = function () {
            var x = document.getElementById("completed");
            if (x.style.display === "none") {
                x.style.display = "block";
                document.getElementById("name").value = "";
                document.getElementById("email").value = "";
                document.getElementById("phone").value = "";
                document.getElementById("message").value = "";
            } else {
                x.style.display = "none";
            }
        }
    </script>
}
@model FlameAndWax.Models.ProductDetailViewModel;
@inject FlameAndWax.Services.Services.Interfaces.ICustomerService _customerService;
@using FlameAndWax.Data.Models;
<div class="container">
    <div class="jumbotron" style="background-color:#e4e2da;">
        <div class="row">
            <div class="col-md-8">
                <div class="card shadow-lg">
                    <div class="bd-example">
                        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="@Url.Content(Model.ProductGallery.FirstOrDefault().PhotoLink)" class="d-block w-100 rounded" alt="Responsive image">
                                </div>
                                @{
                                    var productGalleries = Model.ProductGallery as List<ProductGalleryModel>;
                                }
                                @for (int i = 1; i < productGalleries.Count(); i++)
                                {
                                    <div class="carousel-item">
                                        <img src="@Url.Content(productGalleries[i].PhotoLink)" class="d-block w-100 rounded" alt="Responsive image">
                                    </div>
                                }
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-md-4">
                <h4><strong>@Model.ProductName</strong></h4>
                <p><strong>Product Id: @Model.ProductId</strong></p>
                <hr />
                <table class="table table-responsive table-bordered text-center">
                    <thead class="thead-light">
                        <tr>
                            <td><p><strong>Unit Price</strong></p></td>
                            <td><p><strong>Price</strong></p></td>
                            <td><p><strong>Unit Stock</strong></p></td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><p class="tab">@Model.UnitPrice</p></td>
                            <td><p class="tab">@Model.ProductPrice</p></td>
                            <td><p class="tab">@Model.UnitsInStock</p></td>
                        </tr>
                    </tbody>
                </table>
                <p><strong>Description</strong></p>
                <p>@Model.ProductDescription</p>
                <a class="btn btn-gold btn-block" asp-route-_productId="@Model.ProductId" asp-action="AddToCart" asp-controller="Products">Add To Cart <i class="fas fa-cart-plus"></i></a>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-6">
                <h4>Ratings and Reviews</h4>
                <h6>Total of @Model.CustomerReviews.Count() Reviews</h6>
            </div>           
        </div>
        <div class="row">
            <div class="col-6">
                @if (Model.IsProductBoughtByLoggedInCustomer)
                {
                    <form method="get" asp-controller="Products" asp-action="AddProductReview">
                        <input type="hidden" name="productId" value="@Model.ProductId" />
                        <textarea type="text" name="reviewDetail" class="form-control" placeholder="Enter Review Detail" ></textarea>
                        <input type="submit" value="Post Review" class="btn btn-gold mt-1" />
                    </form>
                }
            </div>
        </div>
        <hr />
        @foreach (var customerReview in Model.CustomerReviews)
        {
            <div class="row pb-1">
                <div class="col-12">
                    <div class="card border-dark">
                        <!-- Review header -->
                        <div class="card-header" style="background-color: #D3D3D3;">
                            <!--
                            <img src="" class="rounded" alt="customer name here">
                            -->
                            <div class="row px-1">
                                <div class="col-12">
                                    <div class="float-left text-uppercase">
                                        <b>@customerReview.Customer.CustomerName</b>
                                        <br />
                                    </div>
                                    <div class="float-right">
                                        <b>Score: </b>
                                        <!-- NOTE: Insert "if statement" that changes badge color depending on score -->
                                        <div class="badge badge-primary text-wrap">@customerReview.ReviewScore</div>
                                    </div>
                                </div>
                            </div>
                            <div class="row px-1">
                                <div class="col-12">
                                    <div class="text-left">
                                        <b>Posted: </b>Date Here
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Review comment -->
                        <div class="card-body" style="background-color: #F0F0F0;">
                            <blockquote class="blockquote mb-0">
                                <p>@customerReview.ReviewDetail</p>
                            </blockquote>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


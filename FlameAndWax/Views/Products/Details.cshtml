@model FlameAndWax.Models.ProductDetailViewModel;
@using FlameAndWax.Data.Models;
@{ViewData["Title"] = "Details"; }
<div class="container">
    <div class="jumbotron" style="background-color:#e4e2da;">
        <div class="row">
            <!-- Product Picture Carousel -->
            <div class="col-xl-8 col-lg-8 col-12">
                <div class="card shadow-lg">
                    <div class="bd-example">
                        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel" style="min-width:100%; max-height:400px; background-color:black;">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="@Url.Content(Model.ProductGallery.FirstOrDefault().PhotoLink)" class="d-block rounded mx-auto" style="height:auto; max-height:400px; width:contain; max-width:contain;" alt="Responsive image">
                                </div>
                                @{
                                    var productGalleries = Model.ProductGallery as List<ProductGalleryModel>;
                                }
                                @for (int i = 1; i < productGalleries.Count(); i++)
                                {
                                    <div class="carousel-item">
                                        <img src="@Url.Content(productGalleries[i].PhotoLink)" class="d-block rounded mx-auto" style="height: auto; max-height: 400px; width: contain; max-width: contain; " alt="Responsive image">
                                    </div>
                                }
                            </div>
                            <!-- Shows arrows only when there are multiple images-->
                            @{
                                if (productGalleries.Count() > 1)
                                {
                                    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Product Details -->
            <div class="col-xl-4 col-lg-4 col-12">
                <h4><strong>@Model.ProductName</strong></h4>
                <p><strong>Product Id: @Model.ProductId</strong></p>
                <hr />
                <table class="table table-responsive table-bordered text-center">
                    <thead class="thead-light">
                        <tr>
                            <td><p><strong>Unit Price</strong></p></td>
                            <td><p><strong>Price</strong></p></td>
                            <td><p><strong>Unit Stock</strong></p></td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><p class="tab">@Model.UnitPrice</p></td>
                            <td><p class="tab">@Model.ProductPrice</p></td>
                            <td><p class="tab">@Model.UnitsInStock</p></td>
                        </tr>
                    </tbody>
                </table>
                <p><strong>Description</strong></p>
                <p>@Model.ProductDescription</p>
                <a class="btn btn-gold btn-block" asp-route-_productId="@Model.ProductId" asp-action="AddToCart" asp-controller="Products">Add To Cart <i class="fas fa-cart-plus"></i></a>
            </div>
        </div>
        <hr />

        <div class="row">
            <!-- Review Count -->
            <div class="col-6">
                <h4>Ratings and Reviews</h4>
                <h6>Total of @Model.CustomerReviews.Count() Reviews</h6>
            </div>

            <!-- Alert -->
            <div class="col-6">
                <div class="alert alert-warning alert-dismissible fade show" role="alert" id="completed" style="display:none;">
                    <strong>Congratulations!</strong> You have added a comment below.
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>

        </div>

        <!-- Review Stars -->
        <div class="row">
            <div class="col-12">
                @if (Model.IsProductBoughtByLoggedInCustomer)
                {
                    <form method="get" asp-controller="Products" asp-action="AddProductReview"
                          data-ajax="true" data-ajax-update="#content" data-ajax-loading="#overlayLoadingDiv" data-ajax-complete="completed">
                        <div class="rate">
                            <input type="radio" id="star5" name="rate" value="5" />
                            <label for="star5" title="text">5 stars</label>
                            <input type="radio" id="star4" name="rate" value="4" />
                            <label for="star4" title="text">4 stars</label>
                            <input type="radio" id="star3" name="rate" value="3" />
                            <label for="star3" title="text">3 stars</label>
                            <input type="radio" id="star2" name="rate" value="2" />
                            <label for="star2" title="text">2 stars</label>
                            <input type="radio" id="star1" name="rate" value="1" />
                            <label for="star1" title="text">1 star</label>
                        </div>
                        <input type="hidden" name="productId" value="@Model.ProductId" />
                        <textarea type="text" name="reviewDetail" class="form-control" placeholder="Enter Review Detail" rows="5"></textarea>
                        <button type="submit" class="btn btn-gold mt-1">Post Review <i class="fas fa-paper-plane"></i></button>

                    </form>
                }
            </div>
        </div>
        <hr />
        <div class="row" id="content">
            @await Html.PartialAsync("ProductReviewPartial", Model.CustomerReviews)
        </div>

    </div>
</div>

@section scripts{
    <script>
        completed = function () {
            var x = document.getElementById("completed");
            if (x.style.display === "none") {
                x.style.display = "block";
                document.getElementById("name").value = "";
                document.getElementById("email").value = "";
                document.getElementById("phone").value = "";
                document.getElementById("message").value = "";
            } else {
                x.style.display = "none";
            }
        }
    </script>
}


@model IEnumerable<FlameAndWax.Models.ProductViewModel>;
@using FlameAndWax.Data.Constants;
@{
    ViewData["Title"] = "Products";
}
<div class="container">
    <div class="row p-2">
        <h2>@ViewData["Title"]</h2>

    </div>

    <div class="row p-2">
        <div class="dropdown">
            <button class="btn dropdown-toggle btn-gold" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Category
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" asp-action="Sort" asp-controller="Products" asp-route-category="@nameof(Constants.Category.Candle)">Candle</a>
                <a class="dropdown-item" asp-action="Sort" asp-controller="Products" asp-route-category="@nameof(Constants.Category.Soap)">Soap</a>
                <a class="dropdown-item" asp-action="Sort" asp-controller="Products" asp-route-category="@nameof(Constants.Category.Diffuser)">Diffuser</a>
            </div>
        </div>
    </div>
    <div class="row">
        @if (Model.Count() == 0)
        {
            <div class="mx-auto">
                <div class="row">
                    <lottie-player src="https://assets3.lottiefiles.com/temp/lf20_Celp8h.json" background="transparent" speed="1" style="width: 300px; height: 300px;" loop autoplay></lottie-player>
                </div>               
            </div>            
        }
        @foreach (var product in Model)
        {
            <div class="col-md-6 col-lg-4 p-1">
                <div class="card shadow-lg">
                    @if (product.PhotoLink.Length == 0)
                    {
                        <img class="card-img-top" src="~/images/empty_image.png" style="height:200px;" alt="Card image cap" />
                    }
                    else
                    {
                        <img class="card-img-top" src="@Url.Content(product.PhotoLink)" style="height: 200px;" alt="Card image cap">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@product.ProductName</h5>
                        <p class="card-text p-semi">@product.ProductDescription</p>
                        <h5 class="card-title"><strong>PHP</strong>@product.ProductPrice</h5>
                        <a class="btn btn-gold btn-sm"
                           asp-route-productId="@product.ProductId"
                           asp-action="Details"
                           asp-controller="Products">
                            See More
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

</div>

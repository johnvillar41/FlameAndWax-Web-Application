@model IEnumerable<FlameAndWax.Models.CustomerReviewViewModel>


@if (Model.Count() == 0)
{
    <div class="col-12">
        <div class="row">
            <div class="col-lg-4 col-sm-12 my-auto mx-auto">
                <lottie-player src="https://assets8.lottiefiles.com/packages/lf20_buhby0ug.json" background="transparent" speed="1" style="width: 300px; height: 300px;" autoplay></lottie-player>
            </div>
            <div class="col-lg-4 col-sm-12 my-auto mx-auto">
                <h3 class="text-center">No results found!</h3>
            </div>
        </div>

    </div>
}

@foreach (var customerReview in Model)
{
    <div class="col-12 mb-2">
        <div class="card card0 card2">
            <div class="card-header" style="background-color: #D3D3D3;">
                <div class="row ">
                    <div class="col-3">
                        <img src="~/images/customers/rechard.jpg" class="img-thumbnail" alt="customer pic">
                    </div>
                    <div class="col-9">
                        <div class="float-right">
                            <b>Score: </b>
                            @{
                                switch (customerReview.ReviewScore)
                                {
                                    case Constants.ReviewScore.Excellent:
                                        <div class="badge badge-primary badge-pill badge-success text-wrap">@customerReview.ReviewScore</div>
                                        break;
                                    case Constants.ReviewScore.VeryGood:
                                        <div class="badge badge-primary badge-pill badge-info text-wrap">@customerReview.ReviewScore</div>
                                        break;
                                    case Constants.ReviewScore.Good:
                                        <div class="badge badge-primary badge-pill badge-light text-wrap">@customerReview.ReviewScore</div>
                                        break;
                                    case Constants.ReviewScore.Poor:
                                        <div class="badge badge-primary badge-pill badge-dark text-wrap">@customerReview.ReviewScore</div>
                                        break;
                                    case Constants.ReviewScore.VeryPoor:
                                        <div class="badge badge-primary badge-pill badge-danger text-wrap">@customerReview.ReviewScore</div>
                                        break;
                                }
                            }
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="float-left text-uppercase">
                            <b>@customerReview.Customer.CustomerName</b>
                            <br />
                        </div>

                    </div>
                </div>
                <div class="row">
                    <div class="col-12 float-left">
                        <div class="text-left">
                            <b>Posted: </b>Date Here
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body" style="background-color: #F0F0F0;">
                <blockquote class="blockquote mb-0">
                    <p>@customerReview.ReviewDetail</p>
                </blockquote>
            </div>
        </div>
    </div>

}

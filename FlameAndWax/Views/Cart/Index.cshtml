@using FlameAndWax.Models
@model IEnumerable<ProductViewModel>;

@{
    ViewData["Title"] = "Cart";
}

<div class="container">
    <div class="jumbotron">
        <div class="row">
            <div class="col-md-8 pt-2">
                <div class="card">
                    <table class="table table-hover text-center">
                        <thead>
                            <tr>
                                <th style="width:33%;">Picture</th>
                                <th style="width:33%;">Product Id</th>
                                <th style="width:33%;">Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < 5; i++)
                            {
                                <tr>
                                    <td>
                                        <img src="~/images/products/200mlamber.jpeg" class="img-thumbnail" />
                                    </td>
                                    <td>Product Id</td>
                                    <td>Price</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-md-4 pt-2">
                <div class="card p-2">
                    <div class="card-header">
                        <h3>Order Summary</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6">
                                <p><strong>Items</strong></p>
                            </div>
                            <div class="col-6">
                                <p><strong>PHP 100</strong></p>
                            </div>
                        </div>
                        <div class="row">
                            
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-6">
                                <p><strong>TOTAL COST</strong></p>
                            </div>
                            <div class="col-6">
                                <p><strong>PHP 700</strong></p>
                            </div>
                        </div>
                        <div class="row">
                            <button class="btn btn-gold btn-block">CHECKOUT <i class="fas fa-money-check-alt"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
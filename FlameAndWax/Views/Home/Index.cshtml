@model IEnumerable<FlameAndWax.Models.ProductViewModel>;
@{@using FlameAndWax.Data.Constants;
    ViewData["Title"] = "Home Page";
}



<style>
    .carousel-fade .carousel-item, .carousel-item img {
        max-height: 90vh;
    }
</style>
<!-- Carousel CSS from https://stackoverflow.com/questions/54407116/bootstrap-carousel-image-size-->
<!-- -->
<div class="container">
    <!-- Product Carousel Test -->
    <!-- From Bootstrap 4.3.1 > Carousel > "with captions" -->

    <div class="bd-example">
        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/images/carouselpics/candle.jpeg" class="d-block w-100 rounded" alt="Candles">
                    <div class="carousel-caption">
                        <h5><span class="rounded" style="background-color: rgba(56, 56, 56, 0.8)">Candles</span></h5>
                        <p><span class="rounded" style="background-color: rgba(56, 56, 56, 0.8)">Nulla vitae elit libero, a pharetra augue mollis interdum.</span></p>
                        <a asp-controller="Home" asp-action="ViewCategorizedProducts" asp-route-category="@nameof(Constants.Category.Candle)" class="btn btn-gold"><i class="fas fa-eye"></i> View Category</a>                        
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/images/carouselpics/soap.jpeg" class="d-block w-100 rounded" alt="Soaps">
                    <div class="carousel-caption">
                        <h5><span class="rounded" style="background-color: rgba(56, 56, 56, 0.8)">Soaps</span></h5>
                        <p><span class="rounded" style="background-color: rgba(56, 56, 56, 0.8)">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</span></p>
                        <a asp-controller="Home" asp-action="ViewCategorizedProducts" asp-route-category="@nameof(Constants.Category.Soap)" class="btn btn-gold"><i class="fas fa-eye"></i> View Category</a>
                        
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/images/carouselpics/diffuser.jpg" class="d-block w-100 rounded" alt="Diffusers">
                    <div class="carousel-caption">
                        <h5><span class="rounded" style="background-color: rgba(56, 56, 56, 0.8)">Diffusers</span></h5>
                        <p><span class="rounded" style="background-color: rgba(56, 56, 56, 0.8)">Praesent commodo cursus magna, vel scelerisque nisl consectetur.</span></p>
                        <a asp-controller="Home" asp-action="ViewCategorizedProducts" asp-route-category="@nameof(Constants.Category.Diffuser)" class="btn btn-gold"><i class="fas fa-eye"></i> View Category</a>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <br />
    <hr />
    <br />
    <h3>New Arrivals</h3>

    <div class="row">
        @if(Model == null)
        {
            return;
        }
        @foreach (var product in Model)
        {
            <div class="col-md-6 col-lg-4 p-1">
                <div class="card shadow-lg">
                    <img src="@Url.Content(product.PhotoLink)" class="card-img-top" alt="..." style="height:200px;">
                    <div class="card-body">
                        <a class="badge badge-danger text-white">New Arrivals <i class="fab fa-hotjar"></i></a>
                        <h5 class="card-title">@product.ProductName</h5>
                        <p class="card-text p-semi">@product.ProductDescription</p>
                        <a asp-controller="Home" asp-action="SeeMore" asp-route-id="@product.ProductId" class="btn btn-gold">See More <i class="fas fa-info-circle"></i></a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>




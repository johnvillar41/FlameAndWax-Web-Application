@model FlameAndWax.Data.Models.ShippingAddressModel;
<div class="container">
    <div class="row">
        <div class="col-12 mt-4 mb-2">
            <h2>Shipping Address</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-9">
            <div class="form-group">
                <div class="col-xs-6">
                    <h5>Address</h5>
                    <input id="fullname" type="text" class="form-control" asp-for="@Model.Address"
                        placeholder="Enter Full Name" title="enter your first name if any." required>
                </div>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <div class="col-xs-6">
                        <h5>Postal Code</h5>
                        <input id="contactNumber" type="text" class="form-control" asp-for="@Model.PostalCode"
                            placeholder="Enter Contact Number" title="enter your phone number if any." required>
                    </div>
                </div>
            </div>
            <div class="form-group">

                <div class="col-xs-6">
                    <h5>City</h5>
                    <input id="email" type="email" class="form-control" asp-for="@Model.City"
                        placeholder="email@example.com" title="enter your email." required>
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-6">
                    <h5>Region</h5>
                    <input id="username" type="text" class="form-control" asp-for="@Model.Region"
                        placeholder="Enter Username" title="enter your username." required>
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-6">
                    <h5>Country</h5>
                    <input id="password" type="text" class="form-control" asp-for="@Model.Country"
                        placeholder="Enter Password" title="enter your password." required>
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12">
                    <br>
                    <button class="btn btn-lg btn-gold" id="submit" type="submit">Save
                        <i class="fas fa-save"></i></button>
                </div>
            </div>

        </div>
    </div>

</div>